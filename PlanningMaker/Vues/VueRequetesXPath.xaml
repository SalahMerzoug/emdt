<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	x:Class="PlanningMaker.Vues.VueRequetesXPath">

    <StackPanel x:Name="LayoutRoot">
        <StackPanel Orientation="Horizontal">
            <Label Content="Numéro de la semaine ?" Width="350"/>
            <TextBox Text="{Binding Path=Debut}" Width="100"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="Requête 1 : Enseignants dont le nom contient" Width="350"/>
            <TextBox Text="{Binding Path=Fin}" Width="100"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="Requête 2 : Matières enseignées par" Width="350"/>
            <TextBox Text="{Binding Path=Fin}" Width="100"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="Requête 3 : Professeurs enseignant" Width="350"/>
            <TextBox Text="{Binding Path=Fin}" Width="100"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="Requête 4 : Enseignements de la matière avec l'identifiant" Width="350"/>
            <TextBox Text="{Binding Path=Fin}" Width="100"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="Requête 5 : Enseignements de l'enseignant" Width="350"/>
            <TextBox Text="{Binding Path=Fin}" Width="100"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="Requête 6 : Disponibilités de la salle" Width="300"/>
            <TextBox Text="{Binding Path=Fin}" Width="100"/>
            <Label Content=" le "/>
            <TextBox Text="{Binding Path=Fin}" Width="100"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="Requête 7 : Disponibilités de l'enseignant" Width="300"/>
            <TextBox Text="{Binding Path=Fin}" Width="100"/>
            <Label Content=" le "/>
            <TextBox Text="{Binding Path=Fin}" Width="100"/>
        </StackPanel>
        <Button Height="50" Width="100">
            <Image Source=".\XPath.png"/>
        </Button>
    </StackPanel>
</UserControl>